[Unit]
Description=Real Time Clock
Wants=network.target
After=network.target

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/bin/bash -c "/usr/bin/rtc"

[Install]
WantedBy=multi-user.target
