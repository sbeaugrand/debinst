[Unit]
Description=MP3 server
After=network.target
Wants=network.target

[Service]
Type=oneshot
ExecStart=/home/rock/install/debinst/projects/mp3server/mp3serverd start
ExecStop=/home/rock/install/debinst/projects/mp3server/mp3serverd stop
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
WantedBy=shutdown.target
