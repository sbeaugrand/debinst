# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # name
  config.vm.define "debian10vm"

  # box
  config.vm.box = "debian10vm"
  config.vm.box_url = "./packer_virtualbox-iso_virtualbox.box"

  # gui
  config.vm.provider "virtualbox" do |vb|
    vb.gui = true
  end

  # ssh
  # fixme
  #config.ssh.private_key_path = "$HOME/.ssh/id_pem_rsa"
  config.ssh.username = 'vagrant'
  config.ssh.password = 'vagrant'
  config.ssh.insert_key = false

  # shared folder
  config.vm.synced_folder 'c:/debian10vm','/home/vagrant/windows',
    disabled: false,
    create: true,
    owner: "vagrant",
    group: "vagrant",
    mount_options: ["dmode=777,fmode=777"]

  config.vm.synced_folder ".", "/vagrant", disabled: true
end
